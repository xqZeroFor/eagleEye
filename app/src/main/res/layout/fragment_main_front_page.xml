    <!-- 控制面板 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:spacing="16dp">

        <!-- 开关行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:spacing="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI智能防护"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已拦截 1,326 次违规"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 自定义开关 -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@drawable/switch_track_selector"
                app:thumbTint="@drawable/switch_thumb_selector"
                app:showText="false"
                app:switchMinWidth="60dp"/>

        </LinearLayout>

        <!-- 输入行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:spacing="8dp">

            <!-- 输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/urlEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="← 输入访问地址"
                    android:textColorHint="#9E9E9E"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/goButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/go_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#f3fcfb"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginRight="20dp"
            android:padding="0dp">
<!--         哔哩哔哩卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="0dp"
            android:gravity="center"
            android:spacing="0dp">

            <ImageButton
                android:id="@+id/openBiliButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/bilibili_description"
                android:scaleType="fitCenter"
                android:src="@drawable/bili_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哔哩哔哩"
                android:textColor="#424242"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginRight="20dp"
            android:padding="0dp">
            <!--         百度卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="0dp"
                android:gravity="center"
                android:spacing="0dp">

                <ImageButton
                    android:id="@+id/openBaiduButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/baidu_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baidu_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百度"
                    android:textColor="#424242"
                    android:layout_marginBottom="20dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"

            android:padding="0dp">
            <!--         小红书卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="0dp"
                android:gravity="center"
                android:spacing="0dp">

                <ImageButton
                    android:id="@+id/openRedbookButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/xiaohongshu_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/xiaohongshu_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小红书"
                    android:textColor="#424242"
                    android:layout_marginBottom="20dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


<LinearLayout
